// Tabla de usuarios
CREATE TABLE `hospital`.`usuarios` ( `id` INT NOT NULL AUTO_INCREMENT , `user` VARCHAR(50) NOT NULL , `nombre` VARCHAR(100) NOT NULL , `departamento` VARCHAR(50) NULL , `contrasena` VARCHAR(50) NOT NULL , `rol` INT(100) NOT NULL , `estado` INT(1) NOT NULL DEFAULT '1' , `fecha_creacion` TIMESTAMP NOT NULL , `creado_por` VARCHAR(100) NOT NULL , `ultimo_acceso` VARCHAR(100) NULL , `posicion_laboral` VARCHAR(100) NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

// Tabla articulos
CREATE TABLE `hospital`.`articulos` ( `id` INT NOT NULL AUTO_INCREMENT , `nombre` VARCHAR(100) NOT NULL , `descripcion` TEXT NULL , `existencia` INT(7) NOT NULL , `stock` INT(4) NOT NULL , `cantidad_disponible` INT(7) NOT NULL , `fcc` VARCHAR(100) NOT NULL , `fcv` VARCHAR(100) NOT NULL , `status` VARCHAR(10) NOT NULL , `categoria` VARCHAR(100) NULL , `precio_compra` INT(7) NULL , `precio_venta` INT(7) NOT NULL , `casa_productora` VARCHAR(100) NOT NULL , `fecha_creacion` TIMESTAMP NOT NULL , `creado_por` VARCHAR(100) NOT NULL , `fecha_modificacion` DATE NULL , `modificado_por` VARCHAR(100) NULL , `fecha_borrado` DATE NULL , `borrado_por` VARCHAR(100) NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;
// Tabla de clientes
CREATE TABLE `hospital`.`pacientes` ( `id` INT NOT NULL AUTO_INCREMENT , `nombre` VARCHAR(50) NOT NULL , `apellido` VARCHAR(100) NOT NULL , `telefono` VARCHAR(50) NULL , `celular` VARCHAR(50) NULL , `cedula` VARCHAR(100) NULL , `numero_record` VARCHAR(100) NULL , `cita_previa` DATE NULL , `proxima_cita` DATE NULL , `fecha_creacion` TIMESTAMP NOT NULL , `creado_por` VARCHAR(100) NOT NULL , `fecha_modificacion` DATE NULL , `modificado_por` VARCHAR(100) NULL , `fecha_borrado` DATE NULL , `borrado_por` VARCHAR(100) NULL , `status` INT(2) NOT NULL DEFAULT '1' , `notas` TEXT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;